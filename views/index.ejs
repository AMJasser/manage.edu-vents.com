                        <% locations.forEach(function(location) { %>
                            <option><%= location.ar %></option>
                        <% }) %>
                    </select>
                </label>
                <label dir="rtl" style="text-align: right;">معلومات الموقع*<input dir="rtl" type="text" name="locationInfoAr" placeholder="معلومات الموقع"></label>
                <input type="submit">
            </form>
        </section>
